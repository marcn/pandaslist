<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PandasNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/semi_transparent</item>
        <item name="android:spinnerStyle">@style/spinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="spinnerStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="SpinnerItem" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.DropDownItem</item>
        <item name="android:textColor">#999999</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxHeight">10dip</item>
    </style>
</resources>
